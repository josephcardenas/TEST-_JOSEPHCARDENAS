
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Razon
            </th>
            <th>
                Borrar
            </th>
            <th>
                Modificar
            </th>
        </tr>

        @foreach (var persona in Model)
        {
            <tr>
                <td>
                    @persona.Nombre
                </td>
                <td>
                    @persona.Apellido   
                </td>
                <td>
                    @persona.Razon
                </td>
                <td>
                    <a href="/Home/Baja?cod=@persona.Nombre">borra?</a>
                </td>
                <td>
                    <a href="/Home/Modificacion?cod=@persona.Nombre">modifica?</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Home/Alta">Agregar</a>
</body>
</html>